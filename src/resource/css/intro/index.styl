.part-2
	width 100%
	height 1790px
	min-width 1200px
	background url('../../imgs/intro/bg-2.jpg') center center no-repeat
	color #fff
.p2-1st
	padding-top 90px
	padding-bottom 125px
	width 1200px
	height 240px
	margin 0 auto
	position relative
	p
		position absolute
		font-size 1.6rem
		line-height 30px
		width 600px
		top 210px
		right 110px
		margin 0
.p2-1st-logo
	position absolute
	width 251px
	height 112px
	background url('../../imgs/intro/logo-big.png') center center no-repeat
	top 180px
	left 170px
.p2-1st-title
	position absolute
	width 255px
	height 96px
	background url('../../imgs/intro/text-1.png') center center no-repeat
	top 90px
	right 265px
	&:before, &:after
		content ''
		position absolute
		width 155px
		border-bottom 4px solid #91dff5
	&:before
		top 63px
		left -185px
	&:after
		top 63px
		left 280px
.p2-list
	width 1200px
	margin 0 auto
	.clear
		&:not(:last-child)
			margin-bottom 110px
		> div
			float left
.p2-list-img
	width 537px
	height 300px
	margin-left 40px
	box-shadow 5px 10px 10px rgba(#000000, 0.3)
.list-1
	background url('../../imgs/intro/list-1.jpg') center center no-repeat
.list-2
	background url('../../imgs/intro/list-2.jpg') center center no-repeat
.list-3
	background url('../../imgs/intro/list-3.jpg') center center no-repeat
.p2-list-title
	position relative
	width 542px
	height 266px
	border 4px solid #90dcf3
	border-top none
	margin 30px 0 0 35px
	h5
		font-size 3rem
		line-height 30px
		margin 0
		padding 65px 0 0 35px
	p
		font-size 1.8rem
		line-height 30px
		width 475px
		margin 0
		padding 10px 0 0 35px
.p2-list-header
	position absolute
	width 328px
	height 98px
	top -80px
	left 80px
	&:before, &:after
		content ''
		position absolute
		border-bottom 4px solid #90dcf3
		top 76px
	&:before
		width 58px
		left -84px
	&:after
		width 120px
		left 346px
.header-1
	background url('../../imgs/intro/text-2.png') left center no-repeat
.header-2
	background url('../../imgs/intro/text-3.png') left center no-repeat
.header-3
	background url('../../imgs/intro/text-4.png') left center no-repeat
