.global-nav
	display block
	position fixed
	top 0
	right 0
	left 0
	width 100%
	min-width 1200px;
	height 60px
	max-height 60px
	font-size 0
	background rgba(0,0,0,0.8)
	z-index 9999
	user-select none
.global-nav .gn-content
	position relative
	max-width 1160px
	margin 0 auto
	padding 0 20px
	overflow hidden
.global-nav .gn-list
	width auto
	height 60px
	margin 0 -20px
	text-align justify
.global-nav .gn-item
	display inline-block
	position relative
	height 60px
	vertical-align top
	&:first-child
		margin-right 50px
	a
		display inline-block
		height 60px
		line-height 68px
		padding 0 15px
		font-size 1.4rem
		color #fff
		opacity 1
		transition opacity 0.2s cubic-bezier(0.645, 0.045, 0.355, 1)
		&:hover
			opacity .65
	&.active
		a
			opacity .65
.global-nav .gn-logo
	width 24px
	height 40px
	background url('../../imgs/logo-small.png') center center no-repeat
	background-size 24px 40px
.swiper-banner
	width 100%
	min-width 1200px
	height 840px
	border-top 60px solid #000
.banner
	height 840px
	width 100%
.banner-1st
	background url('../../imgs/index/banner-1.jpg') center center no-repeat
	background-size cover
.banner-2nd
	background url('../../imgs/index/banner-2.jpg') center center no-repeat
	background-size cover
.swiper-pagination-bullet
	background #7c7c7c
	opacity 1
	position relative
.swiper-container-vertical
	> .swiper-pagination-bullets
		.swiper-pagination-bullet
			margin 10px 0
.swiper-pagination-bullet-active
	background #fff
	&:after
		content ''
		position absolute
		width 18px
		height 18px
		border 1px solid #fff
		border-radius 50%
		top -6px
		left -6px
.banner-arrow
	position absolute
	width 33px
	height 25px
	background url('../../imgs/index/logo-arrow.png') center center no-repeat
	bottom 15px
	left calc(50% - 16px)
	z-index 10
