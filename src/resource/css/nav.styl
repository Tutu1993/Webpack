nav.public-nav
	position fixed
	top 0
	right 0
	left 0
	z-index 9999
	display block
	margin 0
	width 100%
	min-width 1024px
	height 44px
	max-height 44px
	background #333
	background rgba(0,0,0,0.8)
	font-size 14px
	user-select none
	> div
		margin: 0 auto
		max-width: 980px
		padding: 0 22px
		position: relative
		z-index: 2
	ul
		list-style none
		margin 0 -10px
		padding 0
		width auto
		height 44px
		text-align justify
		position relative
		&:after
			content ''
			display inline-block
			width 100%
			position relative
		li
			display inline-block
			position relative
			height 44px
			z-index 1
			vertical-align top
			a
				text-decoration none
				display inline-block
				font-size 14px
				height 44px
				line-height 44px
				color white
				padding 0 10px
			a.logo
				width 24px
			a.logo-red
				background url('../imgs/logo-red.png') center center no-repeat
				background-size 24px 24px
			a.logo-white
				background url('../imgs/logo-white.png') center center no-repeat
				background-size 24px 24px
@media only screen and (max-width: 1044px)
	nav.public-nav
		min-width 320px
